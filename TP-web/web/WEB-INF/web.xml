    <servlet>
        <servlet-name>cadastrarFornecedor</servlet-name>
        <servlet-class>tp.controller.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>inserirFornecedor</servlet-name>
        <servlet-class>tp.controller.inserirFornecedor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listarFornecedores</servlet-name>
        <servlet-class>tp.controller.listarFornecedores</servlet-class>
