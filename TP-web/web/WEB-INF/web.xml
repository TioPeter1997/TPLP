    <servlet-mapping>
        <servlet-name>listarTodosUsuario</servlet-name>
        <url-pattern>/listarTodosUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>alterarUsuario</servlet-name>
        <url-pattern>/alterarUsuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
