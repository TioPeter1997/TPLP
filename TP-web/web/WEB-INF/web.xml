    </servlet>
    <servlet>
        <servlet-name>alterarUsuario</servlet-name>
        <servlet-class>tp.controller.alterarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cadastrarFornecedor</servlet-name>
        <url-pattern>/cadastrar_fornecedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>inserirFornecedor</servlet-name>
        <url-pattern>/inserirFornecedor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listarFornecedores</servlet-name>
        <url-pattern>/listarFornecedores</url-pattern>
