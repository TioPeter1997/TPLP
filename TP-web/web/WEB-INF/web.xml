    </servlet>
    <servlet>
        <servlet-name>logarUsuario</servlet-name>
        <servlet-class>tp.controller.logarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listarTodosUsuario</servlet-name>
